                temp_sprite = spr_Platemail;
                break;
            case obj_Shield:
            case obj_Shield_2:
            case obj_Shield_3:
                temp_sprite = spr_Shield;
                break;
            case obj_Agile:
            case obj_Agile_2:
            case obj_Agile_3:
                temp_sprite = spr_SpeedBoost;
                break;
        }
        
        // Draw the weapon sprite.
        if (temp_sprite != noone)
            draw_sprite_ext(temp_sprite, 0, x, y, 0.2, 0.2, 0, c_white, 1 );
    }
    else
    {
        draw_sprite(spr_ball, 0, x, y);
    }
}
else
{
    // Draw red button.
    draw_sprite_ext(spr_ball, 0, x, y, 1, 1, 0, c_red, 1);
    // Set text alignment.
